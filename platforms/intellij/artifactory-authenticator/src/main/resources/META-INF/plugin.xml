<idea-plugin>
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <pluginRepositoryAuthProvider
                implementation="com.slack.foundry.intellij.artifactory.ArtifactoryPluginRepositoryAuthProvider"/>
        <projectConfigurable
                displayName="Artifactory Auth"
                instance="com.slack.foundry.intellij.artifactory.AuthConfig"/>
    </extensions>

    <!-- Workaround for https://youtrack.jetbrains.com/issue/IDEA-315487 -->
    <applicationListeners>
        <listener class="com.slack.foundry.intellij.artifactory.RepoAuthHotfix"
                  topic="com.intellij.ide.AppLifecycleListener"/>
    </applicationListeners>
</idea-plugin>